<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.hpe.tolet.SignUpModule"
    android:background="@drawable/signuper">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="serif"
        android:text="SignUp"
        android:textColor="#ffd2c0"
        android:textSize="35sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
    android:id="@+id/editText1"
        android:maxLength="20"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#ffffff"
    android:ems="10"
    android:hint="First Name"
    android:inputType="textEmailAddress"
    android:textColor="#ffffff"
    android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editText2"
        android:maxLength="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"/>

   </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Email"
        android:maxLength="40"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/editText4"
        android:backgroundTint="#ffffff"
        android:hint="Mobile Number"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editText5"
        android:backgroundTint="#ffffff"
        android:hint="DOB(DD/MM/YYYY)"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:text="Gender:"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />
    <RadioButton
        android:id="@+id/radioMale"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"

        android:textSize="18sp"/>

    <RadioButton
        android:id="@+id/radioFemale"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"

        android:textSize="18sp"/>

    <RadioButton
        android:id="@+id/radiOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:text="Other"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="18sp" />

</RadioGroup>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="5dp"
        android:backgroundTint="#ffffff"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marital Status:"
        android:textSize="20sp"/>

    <Spinner
        android:layout_marginTop="3dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/spinner"
        android:entries="@array/marital_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/marital_prompt"
        android:background="#ffffff"
        />
</LinearLayout>

    <EditText
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="your profession "
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="enter your password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="re-enter password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130dp">
    <Button

        android:layout_marginLeft="110dp"
        android:id="@+id/button4"
        android:onClick="submitSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:text="SUBMIT"
        android:backgroundTint="#ffffff"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:alpha="0.75"
        android:background="#70FF0000"/>

    <Button
        android:id="@+id/button5"
        android:onClick="resetSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:alpha="0.75"
        android:background="#70FF0000"
        android:backgroundTint="#ffffff"
        android:text="RESET"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>

</LinearLayout>
    </ScrollView >